<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="georgm.com.mydraw.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/drawing_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:elevation="15dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#8cffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/brush_color"
            android:src="@drawable/circle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:onClick="changeBrushColor" />
        <ImageView
            android:id="@+id/background_color"
            android:src="@drawable/rectangle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:onClick="changeBackgroundColor"/>
        <ImageView
            android:id="@+id/brush_width"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/brush_width_icon"
            android:onClick="changeBrushWidth"/>
        <ImageView
            android:id="@+id/eraser"
            android:src="@drawable/eraser_not_selected"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:onClick="toggleErasingMode"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="#8cffffff"
        android:elevation="10dp"
        android:layout_centerVertical="true"
        android:padding="12dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/draw_circle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:src="@drawable/circle_not_selected"
            android:onClick="setDrawingMode"/>
        <ImageView
            android:id="@+id/draw_rectangle"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:src="@drawable/rectangle_not_selected"
            android:onClick="setDrawingMode"/>
        <ImageView
            android:id="@+id/draw_line"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:src="@drawable/select_line"
            android:onClick="setDrawingMode"/>
    </LinearLayout>
    
</RelativeLayout>
